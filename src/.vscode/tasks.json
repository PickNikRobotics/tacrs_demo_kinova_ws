{
  "tasks": [
      {
          "type": "shell",
          "label": "Full build",
          "command": "source /opt/overlay_ws/install/setup.bash && nice colcon build --symlink-install --mixin ccache lld compile-commands rel-with-deb-info build-testing-on coverage-gcc coverage-pytest && echo Build complete",
          "options": {
              "cwd": "${workspaceFolder}/.."
          },
          "group": {
              "kind": "build",
              "isDefault": true
          },
          "presentation": {
              "echo": true,
              "reveal": "always",
              "focus": true,
              "panel": "shared",
              "showReuseMessage": true,
              "clear": true
          }
      },
      {
          "type": "shell",
          "label": "Update",
          "command": "sudo apt update && sudo apt upgrade -y && source /opt/overlay_ws/install/setup.bash && rosdep update && rosdep install --ignore-src --from-paths src -y -r",
          "options": {
              "cwd": "${workspaceFolder}/.."
          },
          "group": {
              "kind": "build",
              "isDefault": true
          },
          "presentation": {
              "echo": true,
              "reveal": "always",
              "focus": true,
              "panel": "shared",
              "showReuseMessage": true,
              "clear": true
          }
      },
      {
          "type": "shell",
          "label": "Test",
          "command": "source install/setup.bash && colcon test --install-base install --build-base build --event-handlers console_direct+",
          "options": {
              "cwd": "${workspaceFolder}/.."
          },
          "group": {
              "kind": "build",
              "isDefault": true
          },
          "presentation": {
              "echo": true,
              "reveal": "always",
              "focus": true,
              "panel": "shared",
              "showReuseMessage": true,
              "clear": true
          }
      },
      {
          "type": "shell",
          "label": "Full clean",
          "command": "rm -rf build/* install/*",
          "options": {
              "cwd": "${workspaceFolder}/.."
          },
          "group": {
              "kind": "build",
              "isDefault": true
          },
          "presentation": {
              "echo": true,
              "reveal": "always",
              "focus": true,
              "panel": "shared",
              "showReuseMessage": true,
              "clear": true
          }
      }
  ],
  "version": "2.0.0"
}