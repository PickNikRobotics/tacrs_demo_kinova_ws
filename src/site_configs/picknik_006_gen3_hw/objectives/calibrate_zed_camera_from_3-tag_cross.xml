<?xml version="1.0" encoding="UTF-8" ?>
<root
  BTCPP_format="4"
  main_tree_to_execute="Calibrate Zed Camera From 3-Tag Cross"
>
  <!--//////////-->
  <BehaviorTree
    ID="Calibrate Zed Camera From 3-Tag Cross"
    _subtreeOnly="true"
    computed_pose="{computed_pose}"
  >
    <Control ID="Sequence" name="TopLevelSequence">
      <Action
        ID="GetImage"
        message_out="{image}"
        timeout_sec="2.0"
        topic_name="/zed2i_camera/left/image_raw_color"
      />
      <Action
        ID="GetCameraInfo"
        message_out="{camera_info}"
        timeout_sec="2.0"
        topic_name="/zed2i_camera/left/camera_info"
      />
      <Action
        ID="DetectAprilTags"
        camera_info="{camera_info}"
        detections="{detections}"
        image="{image}"
        parameters="{parameters}"
      />
      <SubTree
        ID="Add AprilTag Pose To Vector"
        _collapsed="true"
        detections="{detections}"
        pose_stamped_vector="{pose_stamped_vector}"
        name="topRight"
        target_id="0"
      />
      <SubTree
        ID="Add AprilTag Pose To Vector"
        _collapsed="true"
        detections="{detections}"
        pose_stamped_vector="{pose_stamped_vector}"
        target_id="5"
        name="topLeft"
      />
      <SubTree
        ID="Add AprilTag Pose To Vector"
        _collapsed="true"
        detections="{detections}"
        pose_stamped_vector="{pose_stamped_vector}"
        target_id="3"
        name="bottom"
      />
      <Action
        ID="CalibrateCameraPose"
        base_link="base_link"
        calibration_tool_frame="calibration_tool_frame"
        computed_pose="{computed_pose}"
        debug_base_calibration_pose="{base_to_calib_pose}"
        debug_camera_calibration_pose="{camera_to_calib_pose}"
        detected_poses="{pose_stamped_vector}"
      />
      <Action
        ID="VisualizePose"
        marker_lifetime="0.000000"
        marker_name="base_to_calib_pose"
        marker_size="0.100000"
        pose="{base_to_calib_pose}"
        name="base_to_calib_pose"
      />
      <Action
        ID="VisualizePose"
        marker_lifetime="0.000000"
        marker_name="Zed Camera Pose"
        marker_size="0.100000"
        pose="{computed_pose}"
        name="Zed Camera Pose"
      />
    </Control>
  </BehaviorTree>
  <TreeNodesModel>
    <SubTree ID="Calibrate Zed Camera From 3-Tag Cross">
      <input_port name="parameters" default="{parameters}" />
      <output_port name="computed_pose" default="{computed_pose}" />
    </SubTree>
  </TreeNodesModel>
</root>
